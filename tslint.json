{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "ban-types": [
      true,
      [
        "Object",
        "Use {} instead."
      ]
    ],
    "jsx-boolean-value": [
      true,
      "never"
    ],
    "jsx-alignment": false,
    "jsx-no-lambda": true,
    "member-access": false,
    "no-console": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false
  },
  "jsRules": {
    "ban-types": [
      true,
      [
        "Object",
        "Use {} instead."
      ]
    ],
    "jsx-boolean-value": [
      true,
      "never"
    ],
    "jsx-no-multiline-js": false,
    "jsx-alignment": false,
    "jsx-no-lambda": true,
    "member-access": false,
    "no-console": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
